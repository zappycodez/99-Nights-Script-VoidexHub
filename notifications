local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer


local gui = Instance.new("ScreenGui")
gui.Name = "V2_Notification"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")


-- Container
local container = Instance.new("Frame")
container.Size = UDim2.fromOffset(380, 140)
container.Position = UDim2.new(1, 400, 0, 20) -- off-screen (right, top)
container.AnchorPoint = Vector2.new(1, 0) -- top-right
container.BackgroundTransparency = 1 -- fully transparent
container.Parent = gui


-- Rounded corners
local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(40, 40)
uicorner.Parent = container


-- Background Image
local bg = Instance.new("ImageLabel")
bg.Size = UDim2.fromScale(0.85, 0.85)
bg.Position = UDim2.fromScale(0.5, 0.5)
bg.AnchorPoint = Vector2.new(0.5, 0.5)
bg.BackgroundTransparency = 1
bg.Image = "rbxassetid://17365191235"
bg.Parent = container


local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0, 15)
uicorner.Parent = bg


local stroke = Instance.new("UIStroke")
stroke.Thickness = 2.5
stroke.Color = Color3.fromRGB(0, 0, 0)
stroke.Transparency = 0
stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
stroke.Parent = bg


-- Text
local text = Instance.new("TextLabel")
text.Size = UDim2.fromScale(1, 1)
text.Position = UDim2.fromScale(0, 0)
text.BackgroundTransparency = 1
text.TextXAlignment = Enum.TextXAlignment.Center
text.TextYAlignment = Enum.TextYAlignment.Center
text.Font = Enum.Font.Bangers
text.TextSize = 24
text.Text = "Advanced Anticheat Bypass enabled."
text.TextColor3 = Color3.fromRGB(255, 255, 255)
text.TextStrokeTransparency = 0
text.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
text.TextScaled = false
text.TextWrapped = true
text.Parent = container


-- Slide-in animation
local tweenIn = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
local tweenOut = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.In)


TweenService:Create(container, tweenIn, {Position = UDim2.new(1, -20, 0, 20)}):Play()


-- Auto-hide after 5 seconds
task.delay(5, function()
    TweenService:Create(container, tweenOut, {Position = UDim2.new(1, 400, 0, 20)}):Play()
    task.wait(0.5)
    if gui then gui:Destroy() end
end)
